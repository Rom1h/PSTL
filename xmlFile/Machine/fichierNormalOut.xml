<MachineInfo>
  <Event>
    <org.eventb.core.convergence>False</org.eventb.core.convergence>
    <org.eventb.core.label>INITIALISATION</org.eventb.core.label>
    <Action>
      <org.eventb.core.assignment>count ≔ 0</org.eventb.core.assignment>
    </Action>
  </Event>
  <SeesContext>
    <org.eventb.core.target>BoundedCtx</org.eventb.core.target>
  </SeesContext>
  <Variable>
    <name>count</name>
  </Variable>
  <Invariant>
    <org.eventb.core.label>count_type</org.eventb.core.label>
    <org.eventb.core.predicate>count ∈ ℕ</org.eventb.core.predicate>
  </Invariant>
  <Invariant>
    <org.eventb.core.label>count_bounded</org.eventb.core.label>
    <org.eventb.core.predicate>count ≤ maxCount</org.eventb.core.predicate>
  </Invariant>
  <Variant>
    <org.eventb.core.label>vrn2</org.eventb.core.label>
    <org.eventb.core.predicate>unknow</org.eventb.core.predicate>
