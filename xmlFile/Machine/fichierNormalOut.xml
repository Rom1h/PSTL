  <Event>
    <org.eventb.core.convergence>True</org.eventb.core.convergence>
    <org.eventb.core.label>Incr</org.eventb.core.label>
    <Garde>
      <org.eventb.core.label>grd</org.eventb.core.label>
      <org.eventb.core.predicate>count < maxCount</org.eventb.core.predicate>
    </Garde>
    <Action>
      <org.eventb.core.assignment>count ≔ count + 1</org.eventb.core.assignment>
    </Action>
  </Event>
  <Event>
    <org.eventb.core.convergence>True</org.eventb.core.convergence>
    <org.eventb.core.label>Decr</org.eventb.core.label>
    <Garde>
      <org.eventb.core.label>grd</org.eventb.core.label>
      <org.eventb.core.predicate>count > 0</org.eventb.core.predicate>
    </Garde>
    <Action>
      <org.eventb.core.assignment>count ≔ count − 1</org.eventb.core.assignment>
    </Action>
  </Event>
  <Event>
    <org.eventb.core.convergence>False</org.eventb.core.convergence>
    <org.eventb.core.label>Discard</org.eventb.core.label>
    <Parameter>
      <org.eventb.core.identifier>k</org.eventb.core.identifier>
    </Parameter>
    <Garde>
      <org.eventb.core.label>grd1</org.eventb.core.label>
      <org.eventb.core.predicate>count > 0</org.eventb.core.predicate>
    </Garde>
    <Garde>
      <org.eventb.core.label>grd2</org.eventb.core.label>
      <org.eventb.core.predicate>k ≤ count</org.eventb.core.predicate>
    </Garde>
    <Garde>
      <org.eventb.core.label>grd3</org.eventb.core.label>
      <org.eventb.core.predicate> k > 0</org.eventb.core.predicate>
    </Garde>
    <Garde>
      <org.eventb.core.label>grd_type</org.eventb.core.label>
      <org.eventb.core.predicate>k ∈ ℕ</org.eventb.core.predicate>
    </Garde>
    <Action>
      <org.eventb.core.assignment>count ≔ count − k</org.eventb.core.assignment>
    </Action>
  </Event>
</MachineInfo>
